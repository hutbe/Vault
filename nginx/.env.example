# nginx 配置


DOMAIN_NAME = localhost

# 基础服务配置
NGINX_PORT=80
NGINX_HOST=default_server
NGINX_VAULT_PORT=8000
NGINX_VAULT_SMART_CLOCK_PORT=8010
NGINX_VAULT_IMAGE_PORT=9000
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# 后端服务配置
BACKEND_HOST=app
BACKEND_PORT=9090

# SSL/TLS配置
SSL_ENABLED=true
SSL_KEY_PATH=/etc/nginx/certs/server.key
SSL_CERT_PATH=/etc/nginx/certs/server.pem

# 文件路径
WEB_ROOT=/usr/share/nginx/www

# Not in using
ACCESS_LOG_PATH=/var/log/nginx/access.log

# 日志配置
LOG_LEVEL=info
ACCESS_LOG_FORMAT=combined

# 性能相关
CLIENT_MAX_BODY_SIZE=100m
PROXY_READ_TIMEOUT=60s
STATIC_CACHE_EXPIRY=365d

# 安全相关
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60s